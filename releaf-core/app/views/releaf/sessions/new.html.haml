.container
  .box
    .logo
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "login" } ) do |f|
      .control-group
        %label.control-label{:for => :email}= t("email", :scope => 'admin.sessions')
        = f.email_field :email, :autofocus => "autofocus", :id => :email
      .control-group
        %label.control-label{:for => :password}= t("password", :scope => 'admin.sessions')
        = f.password_field :password, :id => :password
      .control-group
        %button{:type => "submit"}= t("sign in", :scope => 'admin.sessions')
