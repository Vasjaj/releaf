.toolbox.empty
{
    display: none;
}

.toolbox .trigger
{
    display: inline-block;
    background: none;
    padding: 5px;
    color: #37b1a7;
}

.toolbox .trigger:hover,
.toolbox .trigger:focus,
.toolbox .trigger:active
{
    background: none;
    color: #1e8e85;
}

.toolbox .trigger[disabled]
{
    background: none;
}

.toolbox-items
{
    display: none;
    position: absolute;
    top: 0;
    left: 0;
    min-width: 170px;
    text-align: left;
    z-index: 100;
    margin: -3px 0 0 2px;
}
.toolbox-items > i
{
    color: #282828;
    position: relative;
    top: -8px;
    display: inline-block;
    width: 12px;
}

.toolbox-items > ul
{
    position: relative;
    top: -16px;
}
.toolbox-items li:not(:last-child) .button
{
    border-bottom: 1px solid #393939;
}

.toolbox-items .button
{
    display: block;
    background: #282828;
    color: #37b1a7;
    white-space: nowrap;

    -moz-box-sizing: border-box;
    box-sizing: border-box;
    width: 100%;
    text-align: left;
}

.toolbox-items .button.danger
{
    background: #282828;
    color: #ee462a;
}

.toolbox-items .button:hover
{
    background: #37b1a7;
    color: #ffffff;
}

.toolbox-items .button.danger:hover
{
    background: #ee462a;
}

.toolbox-overlay
{
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 90;
    display: none;
}

