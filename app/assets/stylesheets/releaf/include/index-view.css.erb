.view-index form.search
{
  margin-top: -29px;
}
.view-index form.search .primary
{
  position: relative;
  border-bottom: 2px solid #e6e6e6;
}
.view-index form > .primary .wrapper
{
  float: right;
}
.view-index form.search input[type="text"]
{
  color: #acacac;
  font-weight: normal;
  padding: 5px 25px 5px 10px;
  width: 210px;
  border: 1px solid #e6e6e6;
}
.view-index form.search input[name="search"]
{
  border: 2px solid #e6e6e6;
  border-bottom: none;
}
.view-index form.search button[type="submit"]
{
  position: absolute;
  right: 10px;
  top: 6px;
  color: #37b1a7;
}
.view-index form.search .extras
{
  border: 1px solid #e6e6e6;
  border-top: none;
  background-color: #f6f6f6;
  padding: 23px;
}
.view-index form.search .extras input,
.view-index footer .extras input,
.view-index form.search .extras select,
.view-index footer .extras select
{
  font-size: 13px;
  font-weight: normal;
  width: 135px;
  margin-right: 22px;
}
.view-index footer .extras input,
.view-index form.search .extras input
{
  height: 20px;
}
.view-index h2.header > .totals
{
  float: right;
  font-size: 12px;
  margin-top: 5px;
  display: block;
}
.view-index footer .totals
{
  padding: 10px 17px;
  line-height: 20px;
  text-align: center;
}
.view-index footer .tools .pagination
{
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  z-index: 1;
}
.view-index footer .tools > .primary,
.view-index footer .tools > .secondary
{
  position: relative;
  z-index: 2;
}

.view-index footer .tools .pagination > .button
{
  padding: 10px 16px;
  display: inline-block;
  border-left: 1px solid #c5c5c5;
  border-right: 1px solid #c5c5c5;
}

.view-index footer .tools .pagination > .button i
{
  padding-right: 0px;
}
.view-index footer .tools .pagination > .button:hover
{
  color: #307872;
}
.view-index footer .tools .pagination > .button.disabled:hover
{
  color: #b7c0bf;
}
.view-index footer .tools .pagination .pages
{
  display: inline-block;
  padding: 5px 4px 0px;
  width: 96px;
  vertical-align: top;
}
.view-index footer .tools .pagination .pages > select
{
  width: 96px;
  margin: 0px;
}

.view-index .table .tools
{
  position: relative;
  text-align: center;
  color: #37b1a7;
  width:46px;
}
.view-index .table .tools .cell-wrap
{
  width: 100%;
  position: relative;
}

.view-index  .table tr:hover .tools
{
  color: #1e8e85;
}

.view-index .table .tools .trigger
{
  display: inline-block;
  height:100%;
  background: none;
  padding: 0px;
}
.view-index .table .tools .trigger:hover
{
  background-color: none;
}

.view-index .toolbox
{
  display: none;
  position: absolute;
  top: 0;
  left: 0;
  min-width: 170px;
  text-align: left;
  z-index: 100;
  margin: 2px 0 0 2px;
}
.view-index .toolbox > i
{
  color: #282828;
  position: relative;
  top: -8px;
  display: inline-block;
  width: 12px;
}
.view-index .toolbox > ul
{
  position: relative;
  top: -16px;
}
.view-index .toolbox ul li:not(:last-child) .button
{
  border-bottom: 1px solid #393939;
}

.view-index .toolbox .button
{
  display: block;
  background: #282828;
  color: #37b1a7;
  white-space: nowrap;
}

.view-index .toolbox .button.danger
{
  background: #282828;
  color: #ee462a;
}

.view-index .toolbox .button:hover
{
  background: #37b1a7;
  color: #ffffff;
}

.view-index .toolbox .button.danger:hover
{
  background: #ee462a;
}

.view-index .toolsOverlay
{
  position: absolute;
  
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;

  z-index: 90;

}