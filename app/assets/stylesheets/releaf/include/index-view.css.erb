.view-index form.search.has-text-search
{
  margin-top: -29px;
}
.view-index form.search .text-search
{
  position: relative;
  border-bottom: 2px solid #e6e6e6;
}
.view-index form.search .text-search .wrapper
{
  float: right;
}
.view-index form.search .text-search input[type="text"]
{
  color: #acacac;
  font-weight: normal;
  padding: 5px 25px 5px 10px;
  width: 210px;
  border: 1px solid #e6e6e6;
}
.view-index form.search .text-search input[name="search"]
{
  border: 2px solid #e6e6e6;
  border-bottom: none;
}
.view-index .text-search .button
{
  position: absolute;
  right: 0;
  top: 0;
  background: transparent;
  padding: 5px 10px;
  color: #37b1a7;
}
.view-index .text-search .button:hover
{
  color: #383838;
}
.view-index form.search .extras
{
  border: 1px solid #e6e6e6;
  border-top: none;
  background-color: #f6f6f6;
  padding: 23px;
}
.view-index form.search .extras button
{
    padding: 6px 17px;
}
.view-index form.search .extras input,
.view-index footer .extras input,
.view-index form.search .extras select,
.view-index footer .extras select
{
  font-size: 13px;
  font-weight: normal;
  width: 135px;
  margin-right: 22px;
}

.view-index h2.header > .totals
{
  float: right;
  font-size: 12px;
  margin-top: 5px;
  display: block;
}
.view-index footer .totals
{
  padding: 10px 17px;
  line-height: 20px;
  text-align: center;
}
.view-index footer .tools .pagination
{
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  z-index: 1;
}
.view-index footer .tools > .primary,
.view-index footer .tools > .secondary
{
  position: relative;
  z-index: 2;
}

.view-index footer .tools .pagination > .button
{
  padding: 10px 16px;
  display: inline-block;
  border-left: 1px solid #c5c5c5;
  border-right: 1px solid #c5c5c5;
}

.view-index footer .tools .pagination > .button i
{
  padding-right: 0px;
}
.view-index footer .tools .pagination > .button:hover
{
  color: #307872;
}
.view-index footer .tools .pagination > .button.disabled:hover
{
  color: #b7c0bf;
}
.view-index footer .tools .pagination .pages
{
  display: inline-block;
  padding: 5px 4px 0px;
  width: 96px;
  vertical-align: top;
}
.view-index footer .tools .pagination .pages > select
{
  width: 96px;
  margin: 0px;
}

.view-index .table .toolbox-cell
{
    text-align: center;
    width:46px;
}
