html
{
    font-size: 100.01%;
}

html, body
{
	margin:  0;
	padding: 0;
    position: relative;
    font-family: Consolas, 'Lucida Console', 'Lucida Sans Typewriter', 'Monaco', 'Courier New', Courier, monospace;
}

body, input, select, textarea, button, th, td, pre
{
	font-family: Arial, helvetica, sans-serif;
    font-size:   100%;
}

pre
{
    font-family: Consolas, 'Lucida Console', 'Lucida Sans Typewriter', 'Monaco', 'Courier New', Courier, monospace;
}

html
{
    min-height: 100%;
    height: 100%;
}

body
{
    min-height: 100%;
}

body
{
    font-size:   81.25%;    /* 13px */
    line-height: 1.53846;   /* 20px line height */
    background-color: #FFFFFF;
    color: #1d1d1d;
}

h1, h2, h3, h4, h5, h6, form
{
    margin: 0;
    padding: 0;
}

a
{
    color: #37b1a7;
	text-decoration: underline;
}

a img
{
	border: none;
}

p
{
    margin-top: 0;
}


.block,
.block li
{
    display: block;
    margin: 0;
    padding: 0;
    list-style: none;
    list-style-image: none;
}

.clear
{
    display: block;
    clear: both;
    overflow:   hidden;
    visibility: hidden;
    height: 0px;

}


button,
.button,
input[type="button"],
input[type="submit"]
{
	cursor: pointer;
    background: transparent;
	border: none;
	padding: 0;
    margin: 0;
	box-shadow: none;
    color: inherit;
}

button:focus,
.button:focus,
input[type="button"]:focus,
input[type="submit"]:focus
{
    outline-width: 1px;
    outline-style: dotted;
    outline-color: #37b1a7;
}

button:active,
.button:active,
input[type="button"]:active,
input[type="submit"]:active
{
    outline: none;
}

button::-moz-focus-inner,
.button::-moz-focus-inner,
input[type="button"]::-moz-focus-inner,
input[type="submit"]::-moz-focus-inner
{
    border: 0;
    padding: 0;
}

div, footer
{
	-webkit-transition: left .1s ease-out, right .1s ease-out, -webkit-transform .1s ease-out;
	transition: left .1s ease-out, right .1s ease-out, transform .1s ease-out;
}


/* skip links */
body > .skip-links
{
    position: absolute;
    top: -300px;
    width: 80%;
    left: 100px;
    z-index: 20;
    overflow: visible;
}

body > .skip-links a
{
    position: absolute;
    top: 0;
    z-index: 30;
}

body > .skip-links a:active,
body > .skip-links a:focus
{
    top:    320px;
    height: 1.6em;
}




/* main layout */

body > header
{
    background: #111111;
    color: #d8d8d8;
    height: 60px;
    position: relative;
    z-index: 10;
}

body > .side,
body > .main
{
    position: relative;
    min-height: 100%;
}

body > .side > *:first-child,
body > .main > *:first-child
{
    padding-top: 60px;
}

body > .side,
body.side-open > .side
{
    background: #1d1d1d;
    color: #d3d3d3;

    position: absolute;
    width: 240px;
    left: 0;
    top: 0;
    bottom: 0;

    z-index: 5;

	-webkit-transform: translate(0, 0);
    -ms-transform: translate(0, 0);
	transform: translate(0, 0);
}


body > .side > footer
{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 240px;
}

body > .main,
body.side-open > .main
{
    position: relative;

    padding: 0 40px 50px 280px;
    z-index: 1;
}

body .main > footer,
body.side-open > footer
{
    position: fixed;
    width: 100%;
    z-index: 10;
    left: 280px;
    bottom: 0;
    padding-top: 10px;
    background: #fff;
}

body .main > footer .tools
{
    height: 40px;
    background: #e6e6e6;
    color: #818181;
}

body > .side > footer,
body .main > footer .tools
{
    height: 40px;
}


/* menu hiding and compacting stuff */

header .side-opener
{
    position: absolute;
    left: 100px;
    top: 10px;
    display: none;
}

body > .main,
body > .side
{
    -webkit-transition:
        width .1s ease-out,
        padding-left .1s ease-out,
        left .1s ease-out,
        right .1s ease-out,
        -webkit-transform .1s ease-out
    ;
	transition:
        width .1s ease-out,
        padding-left .1s ease-out,
        left .1s ease-out,
        right .1s ease-out,
        transform .1s ease-out
    ;
}
body > .side .compacter
{
  text-align: right;
  border-bottom: 1px solid #282828;
}
body > .side .compacter button
{
  height: 39px;
  width: 45px;
  background: #171717;
}
body > .side .compacter button:hover
{
  background: #282828;
}
body > .side .compacter .toggle-angle-icon
{
    color: #37b1a7;
    font-size: 24px;
}


body > footer
{

}

@media all and (max-width: 1000px)
{
    body > .side
    {
        -webkit-transform: translate(-240px, 0);
        -ms-transform: translate(-240px, 0);
        transform: translate(-240px, 0);
    }
    body > .main
    {
        padding-left: 40px;
    }
    body .main > footer
    {
        left: 40px;
    }
    body > header .side-opener
    {
        display: block;
    }

    body .side .compacter
    {
        display: none;
    }

    body .side nav
    {
        padding-top: 60px;
    }
}

/* compact sidebar stuff */
body.side-compact > .side
{
    width: 40px;
}

body.side-compact > .side .compacter button
{
    width: 40px;
}

body.side-compact  > .main
{
    padding-left: 80px;
}

body.side-compact > footer
{
    left: 80px;
}

body.side-compact > .side nav li .name,
body.side-compact > .side nav li .collapser
{
    display: none;
}

body.side-compact > .side nav li .trigger
{
    padding-right: 20px;
}
body.side-compact > .side nav > ul > li:hover > .trigger .name
{
    position: absolute;
    top: 0;
    left: 40px;
    height: 30px;
    width: 227px;
    padding: 9px 0 0 13px;
    display: block;
    background: #000;
}

body.side-compact > .side nav > ul > li:hover > .trigger
{
    background-color: #050505;
    color: #fff;
}

body.side-compact > .side nav > ul > li.active > .trigger,
body.side-compact > .side nav > ul > li.active > .trigger .name
{
    background-color: #37b1a7;
}
body.side-compact > .side nav > ul > li:hover > ul
{
    position: absolute;
    top: 39px;
    left: 41px;
    width: 240px;
    display: block;
    background: #000;
}
body.side-compact > .side nav > ul > li > ul
{
    display: none;
}
body.side-compact > .side nav > ul > li:hover > ul .name
{
    display: block;
}

