/* apply releaf button styles */
.button
{
    cursor:pointer;
    display: inline-block;
    background: #37b1a7;
    color: #fff;

    font-weight: normal;
    font-size: 14px;
    line-height: 20px;
    padding: 10px 17px;

    text-decoration: none;
    position: relative;
}

.button i
{
    padding-right: 5px;
}
.button.only-icon i
{
    padding-right: 0;
}

.button:hover,
.button:focus,
.button:active
{
    background: #269990;
    text-decoration: none;
}

.button.secondary
{
    background: #d9d9d9;
    color: #636363;
}
.button.secondary:hover,
.button.secondary:focus,
.button.secondary:active
{
    background: #c5c5c5;
    color: #3c3c3c;
}

.button.danger:hover,
.button.danger:focus,
.button.danger:active
{
    background: #ee462a;
}

.button.disabled,
.button.disabled:hover,
.button.disabled:focus,
.button.disabled:active
{
    color: #b7c0bf;
    background-color: #d9d9d9;
}


.button.loading
{
    opacity: 0.7;
}


.button.loading *
{
    visibility: hidden;
}

.button.loading .loader
{
    visibility: visible;
    padding: 0;
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -0.5em;
    margin-top:  -0.5em;
}



/* Inputs */
.label_wrap
{
  padding: 5px 0;
}
select,
textarea,
input[type="text"],
input[type="password"]
{
  color: #1d1d1d;
  background-color: #f8f8f8;
  border: 1px solid #d4d4d4;
  outline: none;
  font-weight: bold;
}
input[type="text"],
input[type="password"]
{
  padding: 6px 9px;
  height: 1.23em;
}
textarea
{
  padding: 8px;
}
select
{
  font-weight: normal;
  height: 2.46em;
  padding: 5px 0px;
}
textarea:hover,
select:hover,
input[type="text"]:hover,
input[type="password"]:hover
{
  border: 1px solid #b2b1b1;
}
textarea:focus,
select:focus,
input[type="text"]:focus,
input[type="passwod"]:focus
{
  background-color: #ffffff;
  border: 1px solid #6c6c6c;
}



