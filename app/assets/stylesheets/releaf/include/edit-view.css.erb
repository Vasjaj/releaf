body.view-new .main > .new_resource,
body.view-edit .main > .edit_resource,
body.view-new .main > .new_resource > footer,
body.view-edit .main > .edit_resource > footer
{
  max-width: 920px;
}
body.side-compact .main > .new_resource > footer,
body.side-compact .main > .edit_resource > footer
{
    margin-left: 80px;
}

.view-new form .section,
.view-edit form .section
{
  max-width: 860px;
  border: 1px solid #d4d4d4;
  padding: 10px 29px 30px 29px;
}
.view-new form .section .field,
.view-edit form .section .field
{
  padding: 8px 0;
  float: left;
  width: 412px;
  margin-right: 36px;
}

.view-new form .section .field:nth-child(2n),
.view-edit form .section .field:nth-child(2n)
{
    margin-right: 0;
}

.view-new form .section .field .value,
.view-edit form .section .field .value
{
  position: relative;
}
.view-new form .section .field .value .error_box,
.view-edit form .section .field .value .error_box
{
  position: absolute;
  right: 20px;
  bottom: -20px;
  color: #f00a0a;
  font-size: 11px;
  font-style: italic;
}

/* form inputs styling */
.view-new form .section .field   label,
.view-new form .section .field   select,
.view-new form .section .field   input[type="text"],
.view-new form .section .field   input[type="password"],
.view-new form .section .field   textarea,
.view-edit form .section .field  label,
.view-edit form .section .field  select,
.view-edit form .section .field  input[type="text"],
.view-edit form .section .field  input[type="password"],
.view-edit form .section .field  textarea
{
  font-size: 13px;
}

.view-new form .section .field  input[type="text"],
.view-new form .section .field  input[type="password"],
.view-edit form .section .field input[type="text"],
.view-edit form .section .field input[type="password"]
{
  width: 380px;
}
.view-new form .section .field textarea,
.view-edit form .section .field textarea
{
  width: 392px;
}
.view-new form .section .field select,
.view-edit form .section .field select
{
  width: 412px;
}
.view-new form .section .field.type_richtext,
.view-edit form .section .field.type_richtext,
.view-new form .section .field.type_textarea,
.view-edit form .section .field.type_textarea
{
  float: none;
  clear: both;
  margin-left: 0;
}

.view-new form .section .field.has_error select,
.view-new form .section .field.has_error input[type="text"],
.view-new form .section .field.has_erro input[type="password"],
.view-edit form .section .field.has_error select,
.view-edit form .section .field.has_error input[type="text"],
.view-edit form .section .field.has_erro input[type="password"]
{
  border: 1px solid #f00a0a;
}



/* nested fields */
.nested-wrap
{
    clear: both;
}

.nested-wrap .list .item
{
    border: 1px solid #d4d4d4;
    padding: 0 28px 11px 20px;
    margin-bottom: 20px;
    position: relative;
}

.nested-wrap .list .item.template
{
    display: none;
}

.nested-wrap .list .item:after
{
	content: '\00a0';
	display: block;
	clear: both;
	height: 0;
	visibility: hidden;
}


.nested-wrap .remove-item-box
{
    position: absolute;
    right: -1px;
    top: -1px;
    width: auto;
}

.nested-wrap .remove-item-box .button
{
    padding: 6px 10px 7px 10px;
}

.view-new  form .section .nested-wrap .field, 
.view-edit form .section .nested-wrap .field
{
    width: 380px;
}

.view-new  form .section .nested-wrap .field input[type="text"],
.view-new  form .section .nested-wrap .field input[type="password"],
.view-edit form .section .nested-wrap .field input[type="text"],
.view-edit form .section .nested-wrap .field input[type="password"]
.view-new  form .section .nested-wrap .field textarea,
.view-edit form .section .nested-wrap .field textarea
{
    width: 360px;
}

.view-new  form .section .nested-wrap .field select,
.view-edit form .section .nested-wrap .field select
{
    width: 380px;
}

.view-new  form .section .nested-wrap .field,
.view-edit form .section .nested-wrap .field
{
    margin-right: 20px;
}

.view-new  form .section .nested-wrap .field:nth-child(2n),
.view-edit form .section .nested-wrap .field:nth-child(2n)
{
    margin-right: 0;
}

.view-new  .header .toolbox-wrap,
.view-edit .header .toolbox-wrap
{
    font-size: 13px;
    position: absolute;
    right: 0;
    top: 0;
}

.view-new  .header .toolbox .trigger,
.view-edit .header .toolbox .trigger
{
    height: 40px;
    width: 40px;
    text-align: center;
    line-height: 40px;
    padding: 0;
    background: #242424;    
}


