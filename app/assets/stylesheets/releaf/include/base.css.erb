html, body
{
	margin:  0;
	padding: 0;
  position: relative;
  font-family: Consolas, 'Lucida Console', 'Lucida Sans Typewriter', 'Monaco', 'Courier New', Courier, monospace;
}

body, input, select, textarea, button, pre
{
	font-family: Arial, helvetica, sans-serif;
  font-size:   100%;
}

pre
{
  font-family: Consolas, 'Lucida Console', 'Lucida Sans Typewriter', 'Monaco', 'Courier New', Courier, monospace;
}

html
{
    min-height: 100%;
    height: 100%;
}

body
{
    min-height: 100%;
}

body
{
    font-size:   14px;    /* 13px */
    line-height: 1.53846;   /* 20px line height */
    background-color: #FFFFFF;
    color: #1d1d1d;
}

h1, h2, h3, h4, h5, h6, form
{
    margin: 0;
    padding: 0;
}

a
{
  color: #37b1a7;
	text-decoration: underline;
}

a img
{
	border: none;
}

p
{
    margin-top: 0;
}


.block,
.block li
{
    display: block;
    margin: 0;
    padding: 0;
    list-style: none;
    list-style-image: none;
}

.clear
{
    display: block;
    clear: both;
    overflow:   hidden;
    visibility: hidden;
    height: 0px;
}

.header
{
  font-weight: normal;
  color: #fff;
  font-size: 20px;
  background-color: #282828;
  padding: 5px 17px;
  margin-top: 20px;
}


.clearInside:after
{
	content: '.';
	display: block;
	clear: both;
	height: 0;
	visibility: hidden;
}

/* reset native button and link styles */
button,
input[type="button"],
input[type="submit"]
{
	cursor: pointer;
    background: transparent;
	border: none;
	padding: 0;
    margin: 0;
	box-shadow: none;
    color: inherit;
}

button:focus,
a:focus,
input[type="button"]:focus,
input[type="submit"]:focus
{
    outline-width: 1px;
    outline-style: dotted;
    outline-color: #37b1a7;
}

button:active,
a:active,
input[type="button"]:active,
input[type="submit"]:active
{
    outline: none;
}

button::-moz-focus-inner,
input[type="button"]::-moz-focus-inner,
input[type="submit"]::-moz-focus-inner
{
    border: 0;
    padding: 0;
}
