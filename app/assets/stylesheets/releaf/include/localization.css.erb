.localization:not(.active)
{
    display: none;
}

.localization-switch
{
    color: #1d1d1d;
    font-size: 12px;
    position: absolute;
    right: 0;
    top: 13px;

}

.localization-switch .trigger
{
    display: inline-block;
    padding: 4px 9px 4px 11px;
    border: 1px solid #d4d4d4;
    background: #f8f8f8;
    text-transform: uppercase;
}
.localization-switch .trigger i
{
    color: #307872;
    margin-left: 9px;
}

.localization-switch .trigger:hover
{
    border-color: #b2b1b1;
}

.localization-switch .trigger:focus,
.localization-switch .trigger:active
{
    background-color: #cac9c9;
    border-color: #cac9c9;
    color: #1d1d1d;
}



.localization-menu-items
{
    display: none;
    position: absolute;
    top: 0;
    left: 0;
    text-align: left;
    z-index: 100;
    border: 1px solid #d7d7d7;

    box-shadow: 0 0 2px 2px rgba(0,0,0,0.1);
}

.localization-menu-items > ul
{
    position: relative;
}

.localization-menu-items button
{
    display: block;
    background: #fff;
    white-space: nowrap;

    -moz-box-sizing: border-box;
    box-sizing: border-box;
    width: 100%;
    text-align: left;

    text-transform: uppercase;
    font-size: 14px;
    padding: 7px 26px;

}


.localization-menu-items button:hover
{
    background: #e6e6e6;
}

.localization-menu-overlay
{
    position: absolute;

    left: 0;
    top: 0;
    right: 0;
    bottom: 0;

    z-index: 90;

    display: none;
}

