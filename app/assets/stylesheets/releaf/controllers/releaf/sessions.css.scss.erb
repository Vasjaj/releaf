html, body {
   margin: 0;
   padding: 0;
   height: 100%;
   color: #fff;
}

body {
	background: #111;
}

.container {
	position: absolute;
	top: 0;
	bottom: 0;
	width: 100%;
	height: 100%;
}

.login-box {
	width: 290px;
	margin: 0 auto;
	position: relative;
	top: 15%;

}

.login-box .logo {
    padding-bottom: 70px;
    width: 60px;
    height: 72px;
    background-repeat: no-repeat;
    background-image: url(data:image/png;base64,);
}

.control-group {
	margin-bottom: 9px;
	margin-left: 10px;
}

.control-group .control-label {
	display: block;
	margin-bottom: 5px;
	cursor: pointer;
}

.control-group input, .control-group button {
	width: 280px;
	height: 35px;
	border: 0;
	padding: 6px;
}

.control-group input {
	margin-bottom: 10px;
	background-color: #fff;
	box-sizing: border-box;
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
}

.control-group input:hover {
	border: 0;
}

.control-group button:hover, .control-group button:focus {
	background: #269990;
}


.control-group button {
	margin-top: 23px;
	background-color: #37b1a7;
}