body
{
  background-color: #f4f9f2;
}
.controller-releaf-sessions.action-new
{
  color: #96ae8f;
  font-family: Arial, sans-serif;
}
.controller-releaf-sessions.action-new .login_form_container
{
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  width: 355px;
  height: 259px;
  margin: -192px auto 0;
  padding: 63px 43px 0 43px;
}
@media screen and (min-height: 550px)
{
  .controller-releaf-sessions.action-new .login_form_container
  {
    top: 40%;
  }
}
.controller-releaf-sessions.action-new .login_form
{
  background-color: white;
  padding: 23px 32px 0px 29px;
  height: 226px;
  position: relative;
}
.controller-releaf-sessions.action-new .copy
{
  font-size: 90%;
  color: #c7d4c3;
  font-family: arial narrow, arial, sans-serif;
  position: absolute;
  left: 10px;
  bottom: 6px;
}
.controller-releaf-sessions.action-new .copy a
{
  color: inherit;
}
.controller-releaf-sessions.action-new .logo_container
{
  height: 68px;
}
.controller-releaf-sessions.action-new .inputs
{
  text-align: right;
}
.controller-releaf-sessions.action-new label
{
  display: block;
  text-transform: uppercase;
  margin-bottom: 10px;
}
.controller-releaf-sessions.action-new .inputs span
{
  vertical-align: 5%;
}
.controller-releaf-sessions.action-new .inputs input
{
  width: 190px;
  margin-left: 2px;
  padding: 3px 7px 4px;
  font-family: verdana, arial, sans-serif;
  font-size: 130%;
}
.controller-releaf-sessions.action-new button[type="submit"]
{
  margin-left: 81px;
}



.controller-releaf-sessions .browser-notice
{
  margin-top: 21px;
  padding-right: 44px;
  text-align: right;
}
.controller-releaf-sessions .browser-notice .browsers,
.controller-releaf-sessions .browser-notice .browsers li
{
  list-style: none ;
  margin: 0;
  padding: 0;
  display: inline;
}

.controller-releaf-sessions .browser-notice a
{
  text-decoration: none;
}
.controller-releaf-sessions .browser-notice img
{
  vertical-align: middle;
  margin-left: 8px;
  opacity: 0.7;
}
.controller-releaf-sessions .browser-notice a:hover img
{
  opacity:  1;
}

.controller-releaf-sessions .actions
{
  padding-top: 10px;
  text-align: right;
}
