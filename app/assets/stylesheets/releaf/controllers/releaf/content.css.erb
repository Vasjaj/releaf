.controller-releaf-content .primary_panel .global_fields
{
	border-bottom: 1px solid white;
  padding: 10px 5px 0;
  background: transparent url("<%= asset_path 'releaf/controllers/content/global_fields_bgr.png' %>") repeat-x bottom left;
	position: relative;
}
.controller-releaf-content .global_fields .field
{
	display: inline-block;
	vertical-align: top;
}
.controller-releaf-content .global_fields .field[data-name="name"],
.controller-releaf-content .global_fields .field[data-name="slug"]
{
	width: 400px;
}
.controller-releaf-content .global_fields .field[data-name="visible"]
{
	margin-left: 80px;
}
.controller-releaf-content .global_fields .label_wrap
{
	float: none;
	display: inline-block;
	width: auto;
	vertical-align: top;
	min-width: 80px;
	padding-right: 0;
}
.controller-releaf-content .global_fields .value
{
	margin-left: 0;
	display: inline-block;
}
.controller-releaf-content .global_fields .value span
{
  padding-top: 2px;
	display: inline-block;
}
.controller-releaf-content .global_fields select
{
	width: 158px;
}
.controller-releaf-content .global_fields input[type="checkbox"] + label
{
	font-weight: bold;
}
.controller-releaf-content .global_fields .field[data-name="slug"] button
{
	margin-left: -21px;
	vertical-align: 15%;
}
.controller-releaf-content .global_fields .field[data-name="slug"] a
{
  color: #888888;
  margin-top: 3px;
  display: inline-block;
}
.controller-releaf-content .global_fields .field[data-name="slug"] a span
{
	color: black;
}


#objectsSidebar {
  height: 100%;
}


#objectTools {
  height: 30px;
}


#objectTools li {
display: inline;
}

#objectTools button {
  /* width: 32.6%; */
  width: 25.1%;
  margin-right: 1%;
}

#objectTools li.last button {
  margin-right: 0;
}


#objectsTree ul {
list-style: none;
padding: 0;
margin: 0;
}

#objectsTree li {
  padding: 0;
  margin: 0;
  clear: both;
  display: block;
}

#objectsTree li .objectLiDiv {
  min-height: 25px;
  border-bottom: 1px solid
  #fff;
  background-color:
  #bce0b2;
}

#objectForm .objectLiDiv:hover .objectPanelHref {
  opacity: 1;
}

#objectForm .objectPanelHref {
  margin: 4px 4px 0 0;
  float: right;
  opacity: .5;
}

 #objectForm .objectCheck {
  float: left;
  display: block;
  width: 23px;
  height: 20px;
  text-align: right;
  padding-top: 3px;
}

#objectsTree .groupBox {
  float: left;
  width: 20px;
  background-repeat: no-repeat;
  background-position: center;
  height: 25px;
  border: none;
  background-color:
  transparent;
  border-radius: 0;
  display: inline;
}

.objectsTree .groupBoxOpen {
  background-image: url("<%= asset_path 'releaf/content/open.gif' %>") ;
}


#objectsTree .objectHref {
  display: block;
  padding: 2px 3px 0 3px;
}

#objectsTree .objectHref a {
  text-decoration: none;
  margin: 0 1px;
  color: #000;
}

#objectsTree .objectHref a img {
  vertical-align: -20%;
  margin-right: 4px;
}




.collapsableSection .toggleSection {
  position: absolute;
  top: 4px;
  right: 3px;
}

.globalFieldContainer .label_wrap {
  margin: 0;
  padding: 3px 0;
  display: inline-block;
  min-width: 80px;
  text-align: right;
}

.objectNameContainer div {
  margin: 4px 0 3px;
  padding: 3px;
}


.globalFieldContainer .nameWrap, .globalFieldContainer .templateWrap, .globalFieldContainer .rewriteNameWrap, .globalFieldContainer .orderNoWrap, .globalFieldContainer .snapshotsWrap {
  width: 400px;
  float: left;
}

.globalFieldContainer .templateField {
  border-bottom: none;
}

.objectNameContainer {
  position: relative;
}


.templateField, #objectEditForm li {
  padding: 0 0 10px 0;
  border-bottom: 1px dotted
  #999;
}

#objectEditForm .globalFieldContainer label {
  display: inline;
  margin: 0;
  padding: 0;
}

#objectEditForm label {
  display: block;
  font-weight: bold;
  margin: 4px 0 3px 0;
  padding: 3px;
  font-size: 100%;
}

.globalFieldContainer .rewriteNameWrap button {
  margin-left: -28px;
  vertical-align: -25%;
  padding-right: 1px;
}

.globalFieldContainer .rewriteNameWrap input {
  padding-right: 23px;
  width: 230px;
}

.globalFieldContainer .visibleWrap {
  margin-left: 84px;
}

#objectEditForm .visibleWrap {
  margin-right: 60px;
}

#objectEditForm .sideLabel {
  float: left;
}

.duplicateRewriteNameWarning {
  display: none;
  margin: 0 0 0 6px;
  position: relative;
  top: 3px;
}



