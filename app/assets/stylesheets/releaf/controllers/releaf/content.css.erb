.controller-releaf-content .resources
{
    border-left:  1px solid #d4d4d4;
    border-right: 1px solid #d4d4d4;
    font-size: 13px;
}

.controller-releaf-content .resources li
{
    clear: both;
}

.controller-releaf-content .resources li ul
{
    clear: both;
}


.controller-releaf-content .resources .toolbox-cell,
.controller-releaf-content .resources .collapser-cell
{
    border-right: 1px solid #d4d4d4;
    float: left;
}

.controller-releaf-content .resources .toolbox-cell .trigger,
.controller-releaf-content .resources .collapser-cell .button
{
    width:  30px;
    height: 30px;
    padding: 4px 5px;
    background: transparent;
}

.controller-releaf-content .resources .node-cell
{
    border-bottom: 1px solid #d4d4d4;
}
.controller-releaf-content .resources.action-tree > ul li
{
    position: relative;
}
.controller-releaf-content .resources.action-tree .collapser-cell
{
    position: absolute;
    top: 0;
    z-index: 10;
}
.controller-releaf-content .resources .node-cell button
{
    padding: 7px 10px;
    color: #1a1a1a;
    font-weight: bold;
    position: relative;
    width: 100%;
    text-align: left;
    z-index: 1;
}
.controller-releaf-content .resources .node-cell a
{
    display: block;
    color: #1a1a1a;
    text-decoration: none;
    padding: 5px 10px 5px 10px;
    font-weight: bold;
}
.controller-releaf-content .resources .node-cell button:hover,
.controller-releaf-content .resources .node-cell a:hover
{
    background: #d0eeec;
}

.controller-releaf-content .resources .node-cell button span,
.controller-releaf-content .resources .node-cell a span
{
    position: relative;
    left: 13px
}


.controller-releaf-content .resources li  ul ul
{
    background: #f3f1f1;
}

.controller-releaf-content .resources li ul .toolbox-cell,
.controller-releaf-content .resources.action-tree li ul .collapser-cell
{
    border-left:  1px solid #d4d4d4;
}
.controller-releaf-content .resources.action-tree li > .node-cell span
{
    display: inline-block;
}
.controller-releaf-content .resources.action-tree li:not(.has-children) > .node-cell button,
.controller-releaf-content .resources.action-tree li:not(.has-children) > .node-cell a
{
    padding-left: 0px;
}

.controller-releaf-content .resources.action-tree li[data-level="1"] > .node-cell span
{
    margin-left: 30px;
}

.controller-releaf-content .resources.action-tree li[data-level="2"].has-children > .collapser-cell,
.controller-releaf-content .resources.action-tree li[data-level="2"].has-children > .collapser-cell,
.controller-releaf-content .resources li[data-level="2"].has-children > .toolbox-cell
{
    margin-left: 30px;
}


.controller-releaf-content .resources.action-tree li[data-level="2"] > .node-cell span,
.controller-releaf-content .resources.action-tree li[data-level="3"] > .collapser-cell,
.controller-releaf-content .resources li[data-level="2"]:not(.has-children) > .toolbox-cell,
.controller-releaf-content .resources li[data-level="3"] > .toolbox-cell
{
    margin-left: 61px;
}

.controller-releaf-content .resources.action-tree li[data-level="3"]  > .node-cell span,
.controller-releaf-content .resources.action-tree li[data-level="4"].has-children > .collapser-cell,
.controller-releaf-content .resources li[data-level="3"]:not(.has-children)  > .toolbox-cell,
.controller-releaf-content .resources li[data-level="4"].has-children > .toolbox-cell
{
    margin-left: 92px;
}
.controller-releaf-content .resources.action-tree li[data-level="4"]  > .node-cell span,
.controller-releaf-content .resources.action-tree li[data-level="5"].has-children > .collapser-cell,
.controller-releaf-content .resources li[data-level="4"]:not(.has-children)  > .toolbox-cell,
.controller-releaf-content .resources li[data-level="5"].has-children > .toolbox-cell
{
    margin-left: 123px;
}

.controller-releaf-content .resources.action-tree li[data-level="5"] > .node-cell span,
.controller-releaf-content .resources.action-tree li[data-level="6"].has-children > .collapser-cell,
.controller-releaf-content .resources li[data-level="5"]:not(.has-children)  > .toolbox-cell,
.controller-releaf-content .resources li[data-level="6"].has-children > .toolbox-cell
{
    margin-left: 154px;
}

.controller-releaf-content .resources.action-tree li[data-level="6"] > .node-cell span,
.controller-releaf-content .resources.action-tree li[data-level="7"].has-children > .collapser-cell,
.controller-releaf-content .resources li[data-level="6"]:not(.has-children)  > .toolbox-cell,
.controller-releaf-content .resources li[data-level="7"].has-children > .toolbox-cell
{
    margin-left: 185px;
}

.controller-releaf-content .resources.action-tree li[data-level="7"] > .node-cell span,
.controller-releaf-content .resources.action-tree li[data-level="8"].has-children > .collapser-cell,
.controller-releaf-content .resources li[data-level="7"]:not(.has-children)  > .toolbox-cell,
.controller-releaf-content .resources li[data-level="8"].has-children > .toolbox-cell
{
    margin-left: 216px;
}



.controller-releaf-content .resources .collapsed ul
{
    display: none;
}


.controller-releaf-content .copy-node-dialog,
.controller-releaf-content .add-child-dialog
{
    width: 500px;
}
.controller-releaf-content .add-child-dialog[data-columns="1"]
{
    width: 280px;
}

.controller-releaf-content .add-child-dialog .content
{
    padding: 20px 40px;
    text-align: center;
}

.controller-releaf-content .add-child-dialog .content .description
{
    padding: 0 0 20px 0;
}


.controller-releaf-content .add-child-dialog .content ul
{
    width: 200px;
    margin-left: 20px;
    float: left;
}

.controller-releaf-content .copy-node-dialog .content
{
  height: 25em;
  overflow-y: auto;
}

.controller-releaf-content .add-child-dialog .content .content_types ul:first-child
{
    margin-left: 0;
}
.controller-releaf-content .add-child-dialog .content .content_types ul li
{
    margin-bottom: 0.5em;
}

.controller-releaf-content.view-edit .node-fields
{
    background: #f8f8f8;
}

.controller-releaf-content.view-edit .node-fields .field[data-name="template"] .value
{
    height: 35px;
    font-weight: bold;
}

.controller-releaf-content.view-edit .node-fields .field[data-name="slug"] .button.generate
{
    position: absolute;
    right: 1px;
    top: 1px;
    padding: 6px 11px;
    width: 38px;
    height: 33px;
}
.controller-releaf-content.view-edit .node-fields .field[data-name="slug"] input[type="text"]
{
    padding-right: 40px;
}
.controller-releaf-content.view-edit .node-fields .field[data-name="slug"] .link
{
    margin-top: 0.5em;
}
.controller-releaf-content.view-edit .node-fields .field[data-name="slug"] .link span
{
    color: #1D1D1D;
}

.controller-releaf-content.view-edit .content-fields
{
    border-top: none;
}
