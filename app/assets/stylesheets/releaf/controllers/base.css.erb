/* panel layout tweaks */
/* continuous scrolling */
.primary_panel > .body .releaf_table[data-continuous="1"] .thead > * > *,
.primary_panel > .body .releaf_table[data-continuous="1"] .tbody > * > *
{
	white-space: nowrap;
	max-width: 300px;
	overflow: hidden;
	text-overflow: ellipsis;
}

/* search form */
.primary_panel .header .search_form
{
	float: right;
	min-width: 262px;
}
.primary_panel .header .search_form button[type="submit"].loading
{
  background: transparent url("<%= asset_path 'releaf/loader.gif' %>") no-repeat 0px 1px;
}
.primary_panel .header .search_form button[type="submit"].loading img
{
	visibility: hidden;
}
.primary_panel .header .search_form .search
{
	margin-left: 3px;
}

/* releaf table tweaks */
.panel_layout .releaf_table
{
	font-size: 85%;
}
.primary_panel > .body div.releaf_table .nothing_found
{
	position: absolute;
	top: 35%;
	right: 0;
	bottom: 0;
	left: 0;
	text-align: center;
	font-size: 4em;
	font-weight: bold;
	color: #BFBEBE;
	text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.4), 0 1px 0px rgba(255, 255, 255, 0.9);
}

/* view: index */
.view-index .primary_panel .footer .create_new_item
{
	margin-right: 25px;
}
.view-index .primary_panel .footer .actions
{
	float: left;
}
.view-index .primary_panel .footer .list_action_switch
{
	margin-right: 0;
}
.view-index .primary_panel .footer .stats
{
	float: right;
	font-size: 85%;
	color: gray;
	padding-top: 6px;
}

/* view: confirm_destroy */
.view-confirm_destroy .primary_panel .body
{
	text-align: center;
	top: 10px;
	bottom: 10px;
}
.view-confirm_destroy .body .question
{
	font-size: 2em;
	margin: 20px 0 20px;
}
.view-confirm_destroy .body .description
{
	font-size: 1.3em;
	margin-bottom: 20px;
}
.view-confirm_destroy .body form
{
	display: inline;
	margin-right: 15px;
}

/* sections */
.view-new  .primary_panel .body .section,
.view-show .primary_panel .body .section,
.view-edit .primary_panel .body .section
{
	padding-top: 15px;
}
.view-new  .primary_panel .body .section:after,
.view-edit .primary_panel .body .section:after
{
	content: '';
	height: 1px;
	background-color: #b8b7b7;
	border-bottom: 1px solid #f4f3f3;
	display: block;
	margin: 15px 1px 0 1px;
}
.view-new  .primary_panel .body .section:last-child,
.view-show .primary_panel .body .section:last-child,
.view-edit .primary_panel .body .section:last-child
{
	padding-bottom: 25px;
}
.view-new  .primary_panel .body .section:last-child:after,
.view-show .primary_panel .body .section:last-child:after,
.view-edit .primary_panel .body .section:last-child:after
{
	display: none;
}

/* underlined links */
.panel_layout a.mark
{
	border-bottom: 1px solid #d0d0d0;
	text-decoration: none;
}
.panel_layout a.mark:hover
{
	border-bottom-color: gray;
}

/* left panel section collapsing style */
.panel_layout .secondary_panel .section_title
{
  background: transparent url("<%= asset_path 'releaf/expand_tool/close_shim.png' %>") no-repeat 3px 6px;
	padding-left: 15px;
	cursor: pointer;
}
.panel_layout .secondary_panel .section_title:hover
{
	background-image: url("<%= asset_path 'releaf/expand_tool/close_hover_shim.png' %>");
}
.panel_layout .secondary_panel .collapsed .section_title
{
	background: transparent url("<%= asset_path 'releaf/expand_tool/open_shim.png' %>") no-repeat 5px 4px;
}
.panel_layout .secondary_panel .collapsed .section_title:hover
{
	background-image: url("<%= asset_path 'releaf/expand_tool/open_hover_shim.png' %>");
}
.panel_layout .secondary_panel .collapsed > ul
{
	display: none;
}

/* footer blocks */
.panel_layout .primary_panel .footer div.block
{
	position: absolute;
	top: 5px;
}
.panel_layout .primary_panel .footer .block.left_block
{
	left: 15px;
	text-align: left;
}
.panel_layout .primary_panel .footer .block.center_block
{
	left: 33%;
	right: 33%;
	text-align: center;
}
.panel_layout .primary_panel .footer .block.right_block
{
	right: 15px;
}

/* client side validation error style */
.panel_layout .field_with_errors .error
{
	display: inline;
  color: #D00;
	padding-left: 5px;
	font-size: 12px;
}

#preload_wrap
{
    overflow: hidden;
}
#preload {
    position: fixed;
    top: -99999px;
    left: -99999px;
}
.loading
{
    width: 16px;
    height: 16px;
    background: url(<%= asset_path("releaf/loader.gif") %>) center center no-repeat;
}

/* validation errors */
form .form_error_box
{
    color: #f53812;  
    border: 1px solid #f53812;
    background: url("/assets/releaf/validation/alert.png") 10px 10px no-repeat;
    background-color:  #ead9d5;
    
    border-radius: 3px;
    margin: 15px 15px 5px 15px;
    padding: 10px 5px 5px 5px;
    
    text-align: center;
    
}

form .form_error_box .error
{
    margin-bottom: 10px;
}


form .field.has_error
{
    position: relative;
}

form .has_error .error_box
{
    color: #f53812;
    padding-left: 24px;
    margin-left: 10px;
    background: url("<%= asset_path 'releaf/validation/alert.png' %>") no-repeat;
    display: inline-block;
}
form .has_error input,
form .has_error textarea,
form .has_error select
{
    border: 1px solid #f53812;
}
