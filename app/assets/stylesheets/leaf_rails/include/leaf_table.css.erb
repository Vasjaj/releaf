/* basic layout for non-html tables */
div.leaf_table
{
	display: table;
}
.leaf_table .thead
{
	display: table-header-group;
}
.leaf_table .tbody
{
	display: table-row-group;
}
.leaf_table .thead > *,
.leaf_table .tbody > *
{
	display: table-row;
}
.leaf_table .thead > * > *,
.leaf_table .tbody > * > *
{
	display: table-cell;
}
.leaf_table .thead > a,
.leaf_table .tbody > a,
.leaf_table .tbody > * > a
{
	text-decoration: none;
}
/* leaf_table */
.leaf_table
{
	width: 100%;
	line-height: normal;
	background-color: white;
	border: 1px solid #d0d0d0;
}
.leaf_table.no_border
{
	border-width: 0px;
}
.leaf_table td,
.leaf_table th,
.leaf_table .thead > * > *,
.leaf_table .tbody > * > *
{
	padding: 4px;
}
.leaf_table th,
.leaf_table .thead > * > *
{
	background: #F9F9F9 url("<%= asset_path 'leaf_rails/leaf_table/th_bgr.gif"' %>") repeat-x 0px bottom;
	border-left: 1px solid #EEEEEE;
	border-right: 1px solid #D0D0D0;
	padding: 6px 4px 6px 4px;
	font-weight: bold;
	text-align: left;
	text-shadow: 0px 1px white;
}
.leaf_table td,
.leaf_table .tbody > * > *
{
	border-right: 1px solid #f0f0f0;
}
.leaf_table tbody tr:nth-child(odd),
.leaf_table .tbody > *:nth-child(odd)
{
	background-color: #F7F9FA;
}
.leaf_table tr > td:last-child,
.leaf_table tr > th:last-child,
.leaf_table .thead > * > *:last-child,
.leaf_table .tbody > * > *:last-child
{
	border-right: none;
}
.leaf_table.selectable tr:not(.unselectable):hover,
.leaf_table.selectable .tbody > *:not(.unselectable):hover
{
	cursor: pointer;
	background-color: #e4e1f5;
}
.leaf_table.selectable tr:not(.unselectable):hover td,
.leaf_table.selectable .tbody > *:not(.unselectable):hover > *
{
	border-color: transparent;
}
.leaf_table.selectable tr.selected,
.leaf_table.selectable tr.selected:hover,
.leaf_table.selectable .tbody > .selected,
.leaf_table.selectable .tbody > .selected:hover
{
	background: #cac2fa url("<%= asset_path 'leaf_rails/leaf_table/selected_bgr.png"' %>") repeat-x left top;
}
.leaf_table.selectable .selected td,
.leaf_table.selectable .tbody > .selected > *
{
	border-color: transparent;
}
.leaf_table.label_first_column tbody tr td:first-child,
.leaf_table.label_first_column tbody tr th:first-child,
.leaf_table.label_first_column tbody tr:hover td:first-child,
.leaf_table.label_first_column tbody tr:hover th:first-child,
.leaf_table.label_first_column .tbody > * > *:first-child,
.leaf_table.label_first_column .tbody > *:hover > *:first-child
{
	background: #f5f7f8 none;
	border-right: 1px solid #d0d0d0;
	border-top-color: transparent;
	border-bottom-color: transparent;
}

