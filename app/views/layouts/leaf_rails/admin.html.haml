!!! 5
%html
  %head
    %title Leaf on Rails
    = csrf_meta_tags
    %link{ :rel =>"icon", :href => "/assets/admin/favicon.ico", :type => "image/x-icon" }

    = stylesheet_link_tag "admin/application"

    - controller_asset = params[:controller]
    - ['.css.sass', '.css.scss', '.scss', '.sass', '.css'].each do |ext|
      - if File.exists?("app/assets/stylesheets/controllers/#{controller_asset}" + ext)
        = stylesheet_link_tag "controllers/#{controller_asset}"
  %body
    - if admin_signed_in?
      .main_menu
        .user
          %a{:href => destroy_admin_session_path, "data-method" => "delete"}
            %span.image_container
              = image_tag("admin/logout.png")
            %span.name_wrap= t("logout")
        %ul
          - menu[:items].each do |item|
            %li><
              %a{:href => url_for(:controller => item, :action => "index"), :class => ("active" if menu[:active] == item)}
                %span.image_container
                  = image_tag("admin/module.png")
                %span.name_wrap= t(item, :scope => "admin.main_menu")

    %div{:class => "module-#{controller.controller_name} method-#{controller.action_name} controller-#{params[:controller].gsub( '/', '_' )} action-#{controller.action_name} view-#{ controller.active_template.virtual_path.split('/').pop() if controller.active_template }"}
      - if admin_signed_in?
        - if controller.respond_to?(:panel_layout) && controller.panel_layout
          .panel_layout
            .secondary_panel
              = @secondary_panel.html_safe
            .primary_panel
              = yield
        - else
          = yield
      - else
        = yield

    = javascript_include_tag "admin/application"
    - if File.exists?("app/assets/javascripts/controllers/#{controller_asset}.js")
      = javascript_include_tag "controllers/#{controller_asset}"
