.footer
  .padding
    .block.left_block
      %a.button{ :href => url_for( :action => 'index' ) }
        %img{ :src => '/assets/admin/icons/arrow_left.png', :alt => '' }
        %span= t('back')
    -if @controller.features[:edit]
      .block.center_block
        %a.button{ :href => url_for( :action => 'edit', :id => @item.id ) }
          %img{ :src => '/assets/admin/icons/page_white_edit.png', :alt => '' }
          %span= t('edit')
    -if @controller.features[:destroy]
      .block.right_block
        %a.button{ :href => url_for( :action => 'confirm_destroy', :id => @item.id ) }
          %img{ :src => '/assets/admin/icons/bin_empty.png', :alt => '' }
          %span= t('destroy')
