.body.outset_box
  .section
    - @controller.columns( params[:action] ).each do |name|
      - if @controller.has_template( "_show.field.#{name}" )
        = render "show.field.#{name}", :name => name, :item => item
      - elsif !item.send(name).blank? || item.class.columns_hash[ name ].try(:type) == :boolean
        = render 'show.field', :name => name, :item => item
