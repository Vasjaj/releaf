%footer
  .tools
    .primary
      - if @features[:create]
        %a.button.primary{ :href => url_for(:controller => controller.controller_name, :action => "new") }
          %i.icon-plus
          = t('create_new_item', :scope => 'admin.global')
    - if resources.respond_to?(:page)
      = will_paginate( resources, :class=> "pagination", :renderer => "Releaf::PaginationRenderer::LinkRenderer", :outer_window => 0, :inner_window => 2 )
    .secondary
      = render :partial => "index.footer.extras"
