  if defined?(list_url).nil?
    list_url = params.try("[]", :list_url)

    if list_url.nil?
      list_url = request.path
      real_params = params.except(:action, :controller, :ajax)
      unless real_params.empty?
        list_url += "?#{real_params.to_query}"
      end
    end

  end

