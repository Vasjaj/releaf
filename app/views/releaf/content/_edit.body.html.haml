.body
  - if f.object.new_record?
    = f.hidden_field :parent_id, :value => params[:parent_id] || f.object.parent_id
    = hidden_field_tag(:content_type, params[:content_type])


  .section.node-fields
    = render 'edit.field', :name => 'name', :f => f, :view_prefix => 'edit.field'

    .field{ 'data-name' => 'template' }
      .label_wrap
        = f.label :content_type, 'Veids:', :title => f.object.content_type
      .value
        %span= f.object.content_type
      .clear


    = render 'edit.slug', :name => 'slug', :f => f

    .field{ 'data-name' => 'item_position' }
      .label_wrap= f.label :item_position, t('position') + ':'
      .value
        :ruby
          opt_for_select = [[t('first'), 1]]
          @order_nodes.each do |node|
            # FIXME fix i18n usage
            opt_for_select.push [ t('after') + ' ' + node.name, node.lower_item ? node.lower_item.item_position : node.item_position ]
          end

        = f.select :item_position, options_for_select(opt_for_select, @item_position)
      .clear
    .clear
    = render 'edit.field', :name => 'active', :f => f, :view_prefix => 'edit.field'
    = render 'edit.field', :name => 'protected', :f => f, :view_prefix => 'edit.field'
    .clear

  = render 'edit.content_fields', :f => f

